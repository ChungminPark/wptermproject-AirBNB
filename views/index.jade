extends layout

block hero-unit
  .jumbotron
    .container
      h1 AirBNB
      h2 여행은 살아보는거랩니다. 
block content            
  .container
    .row
      .col-md-10
        h3 여행은 살아보는거래
  #main.container.loading
    .row
      .col-sm-12
        include ./includes/homes-main
        table.table.table-hover
          thead
            tr
              th 이메일
              th 제목
              th 날짜
              th 조회수
              th
          tbody
            each post in posts
              tr
                td
                  a(href='/posts/#{post.id}')= post.title
                td= moment(post.createdAt).format('YYYY-MM-DD HH:mm:ss')
                td= post.read
                td
                  a.btn.btn-xs.btn-default(href='/posts/#{post.id}/edit') 수정
                  | 
                  a.btn.btn-xs.btn-default(data-id=post.id, class='delete') 삭제
    .spinner
      .background
      .foreground
        p
          i.fa.fa-circle-o-notch.fa-spin.fa-4x
        p Loading...  
  script(type='text/javascript', src='/javascripts/homes.js')
  script(type='text/javascript', src='/javascripts/autocomplete.js')

  
